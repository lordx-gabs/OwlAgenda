<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema claro do app -->
    <style name="Theme.Light.OwlAgenda" parent="Theme.Material3.Light.NoActionBar">
        <!-- cor primario do app -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- cor do botão -->
        <item name="colorButtonNormal">#DDA0DD</item>
        <!-- Define a cor do texto na barra de título -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Define a cor da barra de status como branca -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Define os itens da barra de status como visivel -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Define a cor da barra de navegação -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:popupMenuStyle">@style/PopupOverlayLight</item>
    </style>

    <!-- Tema escuro do app -->
    <style name="Theme.Dark.OwlAgenda" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Define a cor da barra de status como preta -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Define os itens da barra de status como visivel -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:popupMenuStyle">@style/PopupOverlayDark</item>

    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="Theme.Material3.Dark.NoActionBar" />

    <style name="PopupOverlayLight" parent="Theme.Material3.Light" />

    <style name="PopupOverlayDark" parent="Theme.Material3.Dark" />


</resources>